@startuml
'skinparam
skinparam packageStyle rect
skinparam defaultFontName FG Virgil
skinparam shadowing true

class GenerateInterviewFileUI <<presentation>> {
    +doShow()
    +headline()
    +showMenuAndGetSelection()
}

class GenerateInterviewFileController <<application>> {
    +listAllJobOpenings() : Iterable<JobOpening>
    +findPluginByJobReference(jobReference : JobReference) : InterviewModel
    +generateAndExportInterviewTemplate(interviewModel : InterviewModel) : String
}

class PersistenceContext {
    +create(): void
}

class RepositoryFactory {
    +factory(): void
    +jobOpenings(): JobOpeningRepository
    +interviewModels(): JobRequirementsRepository
}

class JobOpeningRepository {
 + findAllOpen() : Iterable<JobOpening>
}

class InterviewModelRepository {
   + findByJobReference(jobReference : JobReference) : InterviewModel
}

class InterviewModelPlugin{
+generateAndExportInterviewTemplate() : String
}

GenerateInterviewFileUI --> GenerateInterviewFileController: the controller
GenerateInterviewFileController -> PersistenceContext : persistence
PersistenceContext --> RepositoryFactory : factory
RepositoryFactory --> JobOpeningRepository : jobOpeningRepository
RepositoryFactory --> InterviewModelRepository : InterviewModelRepository
GenerateInterviewFileController -> InterviewModelPlugin : interviewModelPlugin

@enduml